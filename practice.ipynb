    {
      "cell_type": "code",
      "source": [
        "bookstore = []  # Empty list to store books\n",
        "\n",
        "\n",
        "def add_book():\n",
        "    title = input(\"Enter book title: \")\n",
        "    author = input(\"Enter author name: \")\n",
        "    price = float(input(\"Enter book price: \"))\n",
        "    book = {\"title\": title, \"author\": author, \"price\": price}\n",
        "    bookstore.append(book)\n",
        "    print(f\"\\n‚úÖ '{title}' added successfully!\\n\")\n",
        "\n",
        "\n",
        "def view_books():\n",
        "    if not bookstore:\n",
        "        print(\"\\nüì≠ No books available in the store.\\n\")\n",
        "    else:\n",
        "        print(\"\\nüìö List of Books:\")\n",
        "        for i, book in enumerate(bookstore, 1):\n",
        "            print(f\"{i}. {book['title']} by {book['author']} - ‚Çπ{book['price']}\")\n",
        "        print()\n",
        "\n",
        "\n",
        "def search_book():\n",
        "    keyword = input(\"Enter title or author to search: \").lower()\n",
        "    found = [b for b in bookstore if keyword in b[\"title\"].lower() or keyword in b[\"author\"].lower()]\n",
        "    if found:\n",
        "        print(\"\\nüîç Search Results:\")\n",
        "        for book in found:\n",
        "            print(f\"{book['title']} by {book['author']} - ‚Çπ{book['price']}\")\n",
        "    else:\n",
        "        print(\"\\n‚ùå No matching book found.\\n\")\n",
        "\n",
        "\n",
        "def delete_book():\n",
        "    view_books()\n",
        "    if bookstore:\n",
        "        try:\n",
        "            index = int(input(\"Enter book number to delete: \")) - 1\n",
        "            if 0 <= index < len(bookstore):\n",
        "                removed = bookstore.pop(index)\n",
        "                print(f\"\\nüóëÔ∏è '{removed['title']}' removed successfully!\\n\")\n",
        "            else:\n",
        "                print(\"\\n‚ö†Ô∏è Invalid book number.\\n\")\n",
        "        except ValueError:\n",
        "            print(\"\\n‚ö†Ô∏è Please enter a valid number.\\n\")\n",
        "\n",
        "\n",
        "def main():\n",
        "    while True:\n",
        "        print(\"===== üìò Bookstore Management System =====\")\n",
        "        print(\"1. Add Book\")\n",
        "        print(\"2. View All Books\")\n",
        "        print(\"3. Search Book\")\n",
        "        print(\"4. Delete Book\")\n",
        "        print(\"5. Exit\")\n",
        "        choice = input(\"Enter your choice (1-5): \")\n",
        "\n",
        "        if choice == \"1\":\n",
        "            add_book()\n",
        "        elif choice == \"2\":\n",
        "            view_books()\n",
        "        elif choice == \"3\":\n",
        "            search_book()\n",
        "        elif choice == \"4\":\n",
        "            delete_book()\n",
        "        elif choice == \"5\":\n",
        "            print(\"\\nüëã Thank you for using the system! Bye!\\n\")\n",
        "            break\n",
        "        else:\n",
        "            print(\"\\n‚ö†Ô∏è Invalid choice! Try again.\\n\")\n",
        "\n",
        "\n",
        "# Run the program\n",
        "main()"
     
